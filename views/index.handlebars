<div class="container" id="container1">
    <img src="/assets/img/pandaBurger.jpg" alt="Panda Burger" class="burger-pic" />
    <h1>Eat-Da-Burger!</h1>
    <h2>Burger logger for blogging, vlogging and motivation for jogging üèÉ‚Äç‚ôÄÔ∏è</h2>
</div>

<div class="container" id="container2">
    <div class="row" id="row1">
        <div class="col-md-6">
            <h3>Burgers awaiting consumption!</h3>
            <ul>
                {{#each Burgers}}
                {{#unless devoured}}
                {{> Burgers/Burger-block devour=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6">
            <h3>Burgers devoured!</h3>
            <ul>
                {{#each Burgers}}
                {{#if devoured}}
                {{> Burgers/Burger-block devour=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="row" id="row2">
        <div class="col-md-12">
            <h2>Burger 'Bucket List'</h2>
            <form id="create-form">
                <div class="form-group">
                    <label for="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                </div>
                <div class="form-group">
                    <label for="devoured">Devour Status</label><br>
                    <input type="radio" name="devoured" value="1" checked id="devoured"> Already devoured!<br>
                    <input type="radio" name="devoured" value="0" id="consume"> Awaiting consumption...
                </div>
                <button type="submit">Add Burger!</button>
            </form>
        </div>
    </div>
</div>

