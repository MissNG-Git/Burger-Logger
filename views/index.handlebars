<div class="wrapper">

    <div class="container" id="container1">
        <div class="row" id="row1">
            <div class="col-md-2" id="heading-img">
                <img src="/assets/img/pandaBurger.png" alt="Panda Burger" class="burger-pic" height="225" width="200" />
            </div>
            <div class="col-md-10" id="heading">
                <h1>Eat-Da-Burger!</h1>
                <h2 class="subtext">Burger logger for blogging 💻, vlogging 📹 and motivation for jogging 🏃‍♀️</h2>
            </div>
        </div>
    </div>

    <main class="page-body">
        <div class="container" id="container2">
            <div class="row" id="row2">
                <div class="col-md-6">
                    <h3>🍽️ Burgers awaiting consumption...</h3>
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>

                <div class="col-md-6">
                    <h3>Burgers devoured! 🍔😋</h3>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="row" id="row3">
                <div class="col-md-12">
                    <h2 class="bucket-list">*~Burger 'Bucket List'~*</h2>
                    <form id="create-form">
                        <div class="form-group" id="burger-input">
                            <label for="bu">Burger Name:</label>
                            <input type="text" id="bu" name="name">
                        </div>
                        <div class="form-group" id="status">
                            <label for="devoured" class="status-text"><u>STATUS:</u></label><br>
                            <input type="radio" name="devoured" value="1" id="devoured" checked> Already devoured!<br>
                            <input type="radio" name="devoured" value="0" id="consume"> Awaiting consumption...
                        </div>
                        <button class="submitBtn" type="submit">Add Burger!</button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="foot-box">
            <div class="text-muted">
                <p>
                    Copyright © 2020 <strong><a href="https://github.com/MissNG-Git"
                            class="footer-ref">MissNG</a></strong><br>
                    All Rights Reserved
                </p>
            </div>
        </div>
    </footer>
</div>